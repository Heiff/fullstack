}
.buttons form{
    display: flex;
    justify-content: center;
}
.buttons{
    margin-top: 20px;
    display: grid;
    grid-template-columns: repeat(1,1fr);
    gap: 30px 0;
}
.buttons button{
    width: 60%;
    margin: 0 auto;
    padding: 7px 0;
