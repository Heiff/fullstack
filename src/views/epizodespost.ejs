        <form method="get" action="/admin/get/ejs">
            <button type="submit">Get Products</button>
        </form>
        <form method="get" action="/admin/post/ejs">
            <button type="submit">Post Products</button>
        </form>
        <form action="">
            <button disabled>Update Products</button>
        </form>
        <form method="get" action="/admin/delete/ejs">
            <button>Delete Products</button>
        </form>
        <form method="get" action="/admin/epizodpost/ejs">
            <button type="submit" style="background: orangered; color: white;">Post Epizodes</button>
        </form>
        <form method="get" action="/admin/epizoddelete/ejs">
            <button type="submit">Delete Epizodes</button>
        </form>
        <form method="get" action="/admin/topicspost/ejs">
            <button type="submit">Post Topics</button>
        </form>
        <form method="get" action="/admin/topicsdelete/ejs">
            <button type="submit">Delete Topics</button>
        </form>
        <form method="get" action="/admin/users/ejs">
            <button>Users</button>
        </form>
       <form method="get" action="/admin/subscribe/ejs">
        <button>Subscribes</button>
       </form>
    </div>
    </div>
    <section>
        <div >
            <form style="border-radius: 10px;width:300px ;padding:10px 20px 20px ; background:gray;display:grid; grid-template-columns: repeat(1,1fr); margin:100px 400px;gap: 10px 0;" method="post" action="/admin/epizod/post" enctype="multipart/form-data">
                <p>name</p>
